<%= form_for(@member, :html => { :class => 'form-horizontal'}) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="modal-body">
    <div class="well">
      <fieldset>
        <div id="legend">
          <legend class=""><strong>Registration Form</strong></legend>
        </div>
        
        <div class="form-group">
          <!-- Competition-level -->
          <label class="col-md-2 control-label"  for="competition_level">Competition Level</label>


          <div class="col-sm-3">
            <select class="form-control round-form" name="competition_level" class = "input-xlarge">
              <option value="district">District</option>
              <option value="state">State</option>
              <option value="national">National</option>
            </select>
          
          </div>
        
        </div>

        <div class="form-group">
          <div class="control-group">
            <!-- Name -->
            <label class="col-md-2 control-label"  for="name">Name</label>

            <div class="col-sm-3">
              <input type="text" id="name" name="name" placeholder="" class="input-xlarge">
               <br>
            </div>
          </div>
        </div>
       
        <div class="form-group">
          <div class="control-group">
            <!-- Date Of Birth -->
            <label class="col-md-2 control-label" for="Dob">Date Of Birth</label>
            <div class="col-sm-3">
              
              <%= f.date_select :dob %>
              <!-- <input type="text" id="email" name="email" placeholder="" class="input-xlarge"> -->
             
            </div>
          </div>
        </div>

        <div class="form-group">
          <!-- Gender -->
          <label class="col-md-2 control-label"  for="Gender">Gender</label>


          <div class="col-sm-3">
            <select class="form-control round-form" name="Gender" class = "input-xlarge">
              <option value="district">Male</option>
              <option value="state">Female</option>
            </select>
          
          </div>
        
        </div>
     
        <div class="form-group">
          <div class="control-group">
            <!-- District-->
            <label class="col-md-2 control-label" for="District">District</label>
            <div class="col-sm-3">
              <input type="text" id="district" name="District" placeholder="" class="input-xlarge">
              
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="control-group">
            <!-- State -->
            <label class="col-md-2 control-label"  for="state">State</label>
            <div class="col-sm-3">
              <input type="text" id="state" name="state" placeholder="" class="input-xlarge">
              
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="control-group">
            <!-- School Name/Club Name -->
            <label class="col-md-2 control-label"  for="school_name">School Name/Club Name</label>
            <div class="col-sm-3">
              <input type="text" id="school_name" name="school_name" placeholder="" class="input-xlarge">
              
            </div>
          </div>
        </div>

        <div class="form-group">
          <!-- Event selection -->
          <label class="col-md-2 control-label"  for="event">Events</label>


          <div class="col-sm-2">
            <select class="form-control round-form" name="event1" class = "input-xlarge">
              <option value="event1">Event1</option>
              <option value="event2">Event2</option>
              <option value="event3">Event3</option>
            </select>
          </div>

          <div class="col-sm-2">
            <select class="form-control round-form" name="event2" class = "input-xlarge">
              <option value="event1">Event1</option>
              <option value="event2">Event2</option>
              <option value="event3">Event3</option>
            </select>
          </div>

          <div class="col-sm-2">
            <select class="form-control round-form" name="event3" class = "input-xlarge">
              <option value="event1">Event1</option>
              <option value="event2">Event2</option>
              <option value="event3">Event3</option>
            </select>
          </div>

          <div class="col-sm-2">
            <select class="form-control round-form" name="event4" class = "input-xlarge">
              <option value="event1">Event1</option>
              <option value="event2">Event2</option>
              <option value="event3">Event3</option>
            </select>
          </div>

          <div class="col-sm-2">
            <select class="form-control round-form" name="event5" class = "input-xlarge">
              <option value="event1">Event1</option>
              <option value="event2">Event2</option>
              <option value="event3">Event3</option>
            </select>
          </div>
        
        </div>

        <div class="form-group">
          <!-- Event selection -->
          <label class="col-md-2 control-label"  for="group_event">Group Events</label>


          <div class="col-sm-2">
            <select class="form-control round-form" name="group_event1" class = "input-xlarge">
              <option value="group_event1">Group Event1</option>
              <option value="group_event2">Group Event2</option>
              <option value="group_event3">Group Event3</option>
            </select>
          </div>

          <div class="col-sm-2">
            <select class="form-control round-form" name="group_event2" class = "input-xlarge">
              <option value="group_event1">Group Event1</option>
              <option value="group_event2">Group Event2</option>
              <option value="group_event3">Group Event3</option>
            </select>
          </div>

          <div class="col-sm-2">
            <select class="form-control round-form" name="group_event3" class = "input-xlarge">
              <option value="group_event1">Group Event1</option>
              <option value="group_event2">Group Event2</option>
              <option value="group_event3">Group Event3</option>
            </select>
          </div>
         
        </div>



        <div class="form-group">     
          <div class="control-group">
            <!-- Button -->
            <div class="controls span7 text-center">
              <button class="btn btn-success">Register</button>
            </div>
          </div>
        </div>

      </fieldset>
    </div>
  </div>

  <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>
    
    <!-- Morris Charts JavaScript -->
    <script src="js/plugins/morris/raphael.min.js"></script>
    <script src="js/plugins/morris/morris.min.js"></script>
    <script src="js/plugins/morris/morris-data.js"></script>
      
<% end %>

